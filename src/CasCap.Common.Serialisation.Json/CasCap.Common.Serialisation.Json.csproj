<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IsPackable>true</IsPackable>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <Authors>Alex Vincent</Authors>
    <Copyright>Alex Vincent</Copyright>
    <Description>Helper library for common Json serialisation requirements.</Description>
    <PackageTags>extensions,helpers,Json</PackageTags>
    <PackageProjectUrl>https://github.com/f2calv/CasCap.Common</PackageProjectUrl>
    <PackageIconUrl>https://raw.githubusercontent.com/f2calv/CasCap.Common/master/src/images/logo.png</PackageIconUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\CasCap.Common.Extensions\CasCap.Common.Extensions.csproj" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
    <!--<PackageReference Include="System.Text.Json" Version="4.7.0" />-->
  </ItemGroup>

</Project>